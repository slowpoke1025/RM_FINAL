<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Request Logs</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f4f4f4;
    }
    .section-title {
      margin-top: 20px;
    }
    .form-inline {
      display: flex;
      align-items: center;
      gap: 10px;
    }
  </style>
</head>
<body>
  <h1>Request Logs</h1>
  
  <h2 class="section-title">Click Counts and Status by Link</h2>
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>URL</th>
        <th>Clicks</th>
        <th>Status</th>
        <!-- <th>Action</th> -->
      </tr>
    </thead>
    <tbody>
      <% linksData.forEach((link, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><a href="<%= link.url %>" target="_blank"><%= link.url %></a></td>
          <td><%= link.clicks %></td>
          <td>
            <form class="form-inline" action="/update-status" method="POST">
              <input type="hidden" name="url" value="<%= link.url %>">
              <select name="status">
                <option value="active" <%= link.status === "active" ? "selected" : "" %>>Active</option>
                <option value="suspended" <%= link.status === "suspended" ? "selected" : "" %>>Suspended</option>
              </select>
              <button type="submit">Update</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h2 class="section-title">Request Logs</h2>
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Timestamp</th>
        <th>IP Address</th>
        <th>URL</th>
      </tr>
    </thead>
    <tbody>
      <% logs.forEach((log, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= log.timestamp.toLocaleString() %></td>
          <td><%= log.ip %></td>
          <td><%= log.url %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
